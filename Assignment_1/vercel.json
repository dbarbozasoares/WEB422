{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node",
        "config": { 
          "includeFiles": ["public/**"] 
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "server.js",
        "headers": {
          "Cache-Control": "no-store"
        }
      }
    ],
    "buildCommand": "npm install --legacy-peer-deps && npm run build"
  }
  